        contentImage.src = 'https://cdn.myanimelist.net/images/anime/1107/100990.jpg';
        contentImage.alt = 'Demon Slayer';
        contentGenre.textContent = 'Fansasy';          //need
        contentInfoDate.textContent = 'October 5, 2021';
